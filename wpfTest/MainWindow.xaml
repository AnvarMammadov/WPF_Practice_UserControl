<Window x:Class="wpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <Grid Name="mainGrid" Background="{StaticResource homePageColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Name="btnHome" HorizontalAlignment="Left" Width="200" Height="60" Style="{StaticResource menuButtonStyle}" Click="btnHome_Click">Home Page</Button>
                <Button Name="btnAbout" HorizontalAlignment="Right" Width="200" Height="60" Style="{StaticResource menuButtonStyle}" Click="btnAbout_Click">About Page</Button>
            <TextBlock HorizontalAlignment="Center" FontSize="40" 
                           FontFamily="Comic Sans MS"
                           Foreground="{StaticResource secondColor}"
                           Padding="15">My Application</TextBlock>
        </Grid>
        <Grid Name="secondGrid" Grid.Row="1"></Grid>
    </Grid>
</Window>
